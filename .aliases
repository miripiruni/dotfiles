# Shell
alias :q='exit'
alias ..='cd ..;' # can then do .. .. .. to move up multiple directories.
alias ...='.. ..'
alias cp='cp -i'
alias mv='mv -i'
alias ln='ln -i'
alias la='ls -laohFG'
# Allows you to create nested dirs: /1/2/3/
alias mkdir='mkdir -p'
alias md='mkdir'
# Human readable filesizes
alias df='df -h'

# Stop after five packets
alias ping='ping -c 5'

# Editor
alias e='vim'
alias E='f(){ $EDITOR ${*:-.};}; f'

# Reload .bashrc
alias refresh='. ~/.bashrc'

# Git
alias gd='git diff'
alias gs='git status -sb'
alias gap='git add -p'
alias gc='git commit -m'
# Short log
alias gsl="git log --format='%Cgreen%h%Creset %C(cyan)%an%Creset - %s' --graph"
# Log
alias gl="git plog"

# Misc
alias localip="ipconfig getifaddr en1"
alias whois="whois -h whois-servers.net"

function random-string() {
    cat /dev/urandom | env LC_ALL=C tr -dc "A-Za-z0-9\!#$\&\(\)\*+,-./\:\\\\\;\<=\>\?@[]^_" | fold -w ${1:-21} | head -n ${1:-1}
}
